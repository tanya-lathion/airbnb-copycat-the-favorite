<div class="container">
  <div class="d-flex justify-content-between align-items-center my-4">
    <h1>Dashboard</h1>
    <%= link_to "Edit my profil", edit_user_registration_path, class: "btn btn-outline-primary" %>
  </div>
</div>

<div class="dashboard">
  <div class=" dashboard-card shadow rounded bookings position-relative">
    <% unless @future_bookings.empty? %>
      <div>
        <h2 class="fw-bold fs-4">Your current or future bookings:</h2>
        <%= render "pages/shared/table_bookings", bookings: @future_bookings %>
        <% if @bookings_on_future.count > 3  %>
          <span class="fs-4">...</span>
        <% end %>
      </div>
      <div class="w-100 d-flex justify-content-center">
        <hr class="dashboard-hr">
      </div>
      <div>
        <h2 class="fw-bold fs-4">Your history of bookings:</h2>
        <%= render "pages/shared/table_bookings", bookings: @past_bookings %>
        <% if @bookings_on_past.count > 3  %>
          <span class="fs-4">...</span>
        <% end %>
      </div>
      <div class="w-100 d-flex justify-content-center">
        <%= link_to "All bookings", bookings_path, class: "btn btn-outline-primary fw-bold" %>
      </div>
    <% else %>
      <div class="position-absolute top-50 start-50 translate-middle d-flex flex-column justify-content-center">
        <h2 class="fw-bold fs-2 text-center">No current or future booking</h2>
        <%= link_to "Bookings history", bookings_path, class: "btn btn-outline-primary fw-bold" %>
      </div>
    <% end %>

  </div>
  <div class="lenses dashboard-card shadow rounded position-relative">
    <% unless @all_pending_booked_lenses.empty? %>
      <h2 class="fw-bold fs-4">Your lenses have been booked:</h2>
      <%= render "pages/shared/table_booked_lenses", all_pending_booked_lenses: @all_pending_booked_lenses %>
      <div class="w-100 d-flex justify-content-center">
        <%= link_to "All lenses", user_lenses_path(current_user.id), class: "btn
        btn-outline-primary fw-bold" %>
      </div>
    <% else %>
       <div class="position-absolute top-50 start-50 translate-middle d-flex flex-column justify-content-center">
        <h2 class="fw-bold fs-2 text-center">No current lenses booked</h2>
        <%= link_to "Manage my lenses", user_lenses_path(current_user.id), class: "btn btn-outline-primary fw-bold" %>
      </div>
    <% end %>
  </div>
</div>
